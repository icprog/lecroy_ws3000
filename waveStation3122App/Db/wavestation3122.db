record(bo, "$(P)$(R)REN")
{
    field(DESC, "REN control")
    field(DTYP, "asynInt32")
    field(OUT,  "@asynMask($(PORT), 0, 1, 0) REN")
    field(ZNAM, "Disable")
    field(ONAM, "Enable")
}

record(longin, "$(P)$(R)STB")
{
    field(DESC, "Device status byte")
    field(DTYP, "asynInt32")
    field(INP,  "@asyn($(PORT), 0, 0) STB")
    field(PINI, "YES")
}

record(stringin, "$(P)$(R):DevIdR")
{
	field(PINI, "YES")
	field(DTYP, "stream")
	field(INP,  "@wavestation3122.proto idn($(P)$(R):ModelR,$(P)$(R):SerNumR,$(P)$(R):SoftwareVerR,$(P)$(R):FirmwareVerR) $(PORT)")
}

record(stringin, "$(P)$(R):ModelR")
{
}

record(stringin, "$(P)$(R):SerNumR")
{
}

record(stringin, "$(P)$(R):SoftwareVerR")
{
}

record(stringin, "$(P)$(R):FirmwareVerR")
{
}


record(stringout, "$(P)$(R):RawWriteS")
{
	field(DTYP, "stream")
	field(OUT,  "@wavestation3122.proto write($(P)$(R):RawResultR) $(PORT)")
}

record(waveform, "$(P)$(R):RawResultR")
{
	field(FTVL, "CHAR")
	field(NELM, "255")
}
